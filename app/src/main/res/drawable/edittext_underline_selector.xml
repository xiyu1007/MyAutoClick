<!-- res/drawable/edittext_underline.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <!-- When EditText is focused (clicked), use green color and set dp to 2 -->
        <layer-list>
            <item
                android:top="18sp">
                <shape android:shape="line">
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="1.5dp"
                        android:color="@color/light_green" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <!-- When EditText is not focused, use laurel_green color and set dp to 1 -->
        <layer-list>
            <item
                android:top="18sp"
                android:left="0dp"
                android:right="0dp">
            <shape android:shape="line">
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="1dp"
                    android:color="@color/laurel_green" />
            </shape>
            </item>
        </layer-list>
    </item>
</selector>
